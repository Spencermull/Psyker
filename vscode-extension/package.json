{
  "name": "psyker-vscode",
  "displayName": "Psyker",
  "description": "Syntax highlighting and LSP diagnostics for Psyker DSL files.",
  "version": "0.0.1",
  "publisher": "psyker",
  "main": "./client/extension.js",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:psy",
    "onLanguage:psya",
    "onLanguage:psyw",
    "onCommand:psyker.runTask",
    "onCommand:psyker.debugTask",
    "onCommand:psyker.addDebugConfiguration"
  ],
  "scripts": {
    "vscode:prepublish": "echo \"No build step configured\"",
    "lint": "echo \"No lint configured\"",
    "package:vsix": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "contributes": {
    "languages": [
      {
        "id": "psy",
        "aliases": [
          "Psyker Task",
          "psy"
        ],
        "extensions": [
          ".psy"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "psya",
        "aliases": [
          "Psyker Agent",
          "psya"
        ],
        "extensions": [
          ".psya"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "psyw",
        "aliases": [
          "Psyker Worker",
          "psyw"
        ],
        "extensions": [
          ".psyw"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "psy",
        "scopeName": "source.psy",
        "path": "./syntax/psy.tmLanguage.json"
      },
      {
        "language": "psya",
        "scopeName": "source.psya",
        "path": "./syntax/psya.tmLanguage.json"
      },
      {
        "language": "psyw",
        "scopeName": "source.psyw",
        "path": "./syntax/psyw.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "psy",
        "path": "./snippets/psy.code-snippets"
      },
      {
        "language": "psya",
        "path": "./snippets/psya.code-snippets"
      },
      {
        "language": "psyw",
        "path": "./snippets/psyw.code-snippets"
      }
    ],
    "iconThemes": [
      {
        "id": "psyker-icons",
        "label": "Psyker Icons",
        "path": "./icon-themes/psyker-icons.json"
      }
    ],
    "commands": [
      {
        "command": "psyker.runTask",
        "title": "Psyker: Run task"
      },
      {
        "command": "psyker.debugTask",
        "title": "Psyker: Debug task"
      },
      {
        "command": "psyker.addDebugConfiguration",
        "title": "Psyker: Add Debug Launch Configuration"
      }
    ],
    "configuration": {
      "title": "Psyker",
      "properties": {
        "psyker.defaultAgent": {
          "type": "string",
          "default": "",
          "description": "Default agent name used by Psyker: Run task and Psyker: Debug task."
        },
        "psyker.cliPath": {
          "type": "string",
          "default": "psyker",
          "description": "Command used to launch the Psyker CLI in VS Code terminals."
        },
        "psyker.sandboxRoot": {
          "type": "string",
          "default": "",
          "description": "Optional value for PSYKER_SANDBOX_ROOT when running tasks from VS Code."
        }
      }
    }
  }
}
